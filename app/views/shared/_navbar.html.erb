<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "TheGen.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Art Direction", art_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Photography", albums_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Web Design", web_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Book Me", contact_path, class: "navbar-wagon-item navbar-wagon-link" %>


      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item ">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>ro
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "Art Direction", art_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Selected Work", albums_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Contact", contact_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>  <% @albums.each do |album| %>
           <%= link_to album_path(album) do %>
            <%= album.name %>
           <% end %>
         <% end %>
        </li>
        <!-- <li><%= link_to "Web Design", web_path, class: "navbar-wagon-item navbar-wagon-link" %></li> -->
        <li><%= link_to "Art Direction", art_path, class: "navbar-wagon-item navbar-wagon-link" %></li>

        <li><%= link_to "Book Me", contact_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
      </ul>
    </div>
  </div>
</div>

